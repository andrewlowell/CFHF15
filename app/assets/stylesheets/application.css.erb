* {
  margin: 0;
}

html, body {
  height: 100%;
}

.little_space {
  margin-top: 10px;
}

.wrapper {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -6.5em;
}
    
.footer, .push {
  height: 6.5em;
} 

#opaqued {
  box-shadow: inset 0 0 0 1000px rgba(0,0,0,.75);
}

.alert {
  background-color: #e60000;
}

.white {
  color: white;
}

label {
  cursor: default;
}

 .extended-vertical-margin {
  margin-top: 25px;
  margin-bottom: 25px;
 }

 .extended-vertical-padding {
  padding-top: 25px;
  padding-bottom: 25px;
 }

.smaller-text {
	font-size: 0.8rem;
	line-height: 1.1rem;
}

.image-centered {
	display: block;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 10px;
}

.text-centered {
	text-align: center;
}

#top-text {
	margin-top: 0px;
	padding-top: 0px;
}

.footer {
	width: 100%;
	background-color: #b61e12;
	color: white;
}

.footer h5 {
	color: white;
}

footer.row {
  padding: 12px 12px 0px 12px;
}

.three {
	background-color: white;
}

.full-width-container {
	width: 100%;
}

.temporary-box {
	margin-top: 20px;
	border: 2px solid black;
	min-height: 600px;
}

.speaker-blurb {
  margin-bottom: 20px;
}

iframe {
  margin-bottom: 20px;
}

#full-background-pic {
  background-image: url("<%= asset_path('librarian_test.jpg') %>");
}

.cream {
 background-color: #FFEBCD; 
}
